@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}


         

<div class="container p-4">
    <div class="row p-3">
        
        <div class="col-6">
            <h2 class="text-primary">Categories</h2>
            </div>
        <div class="col-6 text-end">
            <a asp-action="CreateUpdate" class="btn btn-primary" asp-controller="Category"><i class="bi bi-plus-circle"></i>&nbsp;Create New Category</a>
        </div>

    </div>

</div>
<table class="table table-bordered table-striped " style="width:100%">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            
       
         <tr>
             <td>@item.Name</td>
             <td>@item.DisplayOrder</td>
             <td role="group">
                    <a asp-action="Edit" asp-controller="Category" asp-route-id="@item.id"><i class="bi bi-pencil-square"></i></a>&nbsp;&nbsp;
                    <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.id"><i class="bi bi-trash3-fill"></i></a>
             </td>
         </tr>
        }
    </tbody>
</table>
